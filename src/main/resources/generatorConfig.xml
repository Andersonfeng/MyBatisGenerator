<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="mysql" targetRuntime="MyBatis3">
        <!--序列化-->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
        <!--注解-->
        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="tk.mybatis.mapper.common.Mapper"/>
        </plugin>
        <!--批量改类名-->
        <plugin type="com.itfsw.mybatis.generator.plugins.TableRenamePlugin">
            <!-- 可根据具体需求确定是否配置 -->
            <property name="searchString" value="^T"/>
            <property name="replaceString" value=""/>
        </plugin>
        <commentGenerator>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>
        <!--数据库连接的信息：驱动类、连接地址、用户名、密码 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://192.168.0.130:3307/db-air"
                        userId="root"
                        password="***">
        </jdbcConnection>


        <!-- 默认false，把JDBC DECIMAL 和 NUMERIC 类型解析为 Integer，为 true时把JDBC DECIMAL 和
        NUMERIC 类型解析为java.math.BigDecimal -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- targetProject:生成PO类的位置 -->
        <javaModelGenerator targetPackage="com.hfocean.uavportal.airspace.api.po"
                            targetProject="src/main/java">
            <!-- enableSubPackages:是否让schema作为包的后缀 -->
            <property name="enableSubPackages" value="false"/>

            <!-- 从数据库返回的值被清理前后的空格 -->
            <property name="trimStrings" value="true"/>
                
            <!--生成的PO类继承某个类-->
            <property name="rootClass" value="com.southcn.common.entity.BaseEntity"/>
        </javaModelGenerator>
        <!-- targetProject:mapper映射文件生成的位置 -->
        <!--<sqlMapGenerator targetPackage="com.hfocean.uavportal.airspace.api.mapper"-->
                         <!--targetProject="src/main/java">-->
            <!--&lt;!&ndash; enableSubPackages:是否让schema作为包的后缀 &ndash;&gt;-->
            <!--<property name="enableSubPackages" value="false"/>-->
        <!--</sqlMapGenerator>-->
        <!--&lt;!&ndash; targetPackage：mapper接口生成的位置 &ndash;&gt;-->
        <!--<javaClientGenerator type="XMLMAPPER"-->
        <!--targetPackage="com.anderson.mapper"-->
        <!--targetProject="src/main/java">-->
        <!--&lt;!&ndash; enableSubPackages:是否让schema作为包的后缀 &ndash;&gt;-->
        <!--<property name="enableSubPackages" value="false"/>-->
        <!--</javaClientGenerator>-->
        <!-- 指定数据库表 -->
        <table tableName="%" >
            <property name="useActualColumnNames" value="true"/>
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>

    </context>

</generatorConfiguration>
